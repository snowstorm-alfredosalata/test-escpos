<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- POS Configuration Form View - Extended with Printer Settings -->
        <record id="view_pos_config_form_printer" model="ir.ui.view">
            <field name="name">POS Configuration - Printer Settings</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='row mt16 o_settings_container']" position="after">
                    <div class="row mt16 o_settings_container">
                        <!-- Fiscal Printer (SF20) Setting -->
                        <setting string="Fiscal Printer (SF20)" help="Configure SF20 fiscal printer for electronic receipts">
                            <field name="fiscal_printer_enabled" />
                            <div class="content-group" invisible="not fiscal_printer_enabled">
                                <div class="row mb-2">
                                    <div class="col-lg-6">
                                        <field name="fiscal_printer_ip" placeholder="Fiscal Printer IP Address" class="w-100 pt-1" />
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="fiscal_printer_port" placeholder="Port (default 9100)" class="w-100 pt-1" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-lg-6 o_light_label">
                                        <label string="Timeout (seconds)" for="fiscal_printer_timeout"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="fiscal_printer_timeout"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 o_light_label">
                                        <label string="Fail Safe Mode" for="fiscal_error_fail_safe"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="fiscal_error_fail_safe"/>
                                    </div>
                                </div>
                            </div>
                        </setting>

                        <!-- Non-Fiscal Printer (ESC/POS) Setting -->
                        <setting string="Non-Fiscal Printer (ESC/POS)" help="Configure ESC/POS printer for kitchen orders">
                            <field name="nonfiscal_printer_enabled" />
                            <div class="content-group" invisible="not nonfiscal_printer_enabled">
                                <div class="row mb-2">
                                    <div class="col-lg-6">
                                        <field name="nonfiscal_printer_ip" placeholder="Non-Fiscal Printer IP Address" class="w-100 pt-1" />
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="nonfiscal_printer_port" placeholder="Port (default 9100)" class="w-100 pt-1" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-lg-6 o_light_label">
                                        <label string="Timeout (seconds)" for="nonfiscal_printer_timeout"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="nonfiscal_printer_timeout"/>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-lg-6 o_light_label">
                                        <label string="Comanda Width (chars)" for="comanda_printer_width"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="comanda_printer_width"/>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-lg-6 o_light_label">
                                        <label string="Auto Cut" for="comanda_auto_cut"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="comanda_auto_cut"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 o_light_label">
                                        <label string="Auto Open Drawer" for="comanda_auto_open_drawer"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <field name="comanda_auto_open_drawer"/>
                                    </div>
                                </div>
                            </div>
                        </setting>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
